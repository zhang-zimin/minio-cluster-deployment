FROM minio/minio:latest

# 设置环境变量（可根据实际情况修改）
ENV MINIO_ROOT_USER=minioadmin
ENV MINIO_ROOT_PASSWORD=minioadmin

# 创建数据目录（可根据实际情况修改）
RUN mkdir -p /mnt/data

# 暴露 MinIO 服务端口和控制台端口
EXPOSE 9020 9021

# 启动命令（请根据你的集群节点实际情况调整地址和数量）
CMD ["minio", "server", \
     "http://minio1:9000/mnt/data", \
     "http://minio2:9000/mnt/data2", \
     "http://minio3:9000/mnt/data3", \
     "http://minio4:9000/mnt/data4", \
     "--console-address", ":9021", \
     "--address", ":9020"]